<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:background="@drawable/image_style"
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/payandpark"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:theme="@style/names"
                android:id="@+id/name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="27dp"
                android:text="Name" />



            <TextView
                android:theme="@style/description"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"

                android:layout_marginTop="5dp"
                android:text="We take care of your Vehicle" />





            <TextView
                android:theme="@style/doctor_address"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:layout_marginTop="5dp"
                android:text="Address" />

            <TextView
                android:theme="@style/doctor_address"
                android:id="@+id/opens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="50dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:layout_marginTop="5dp"
                android:text="" />




        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">








            <TextView
                android:theme="@style/rating"
                android:id="@+id/rating_of_doctors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/ic_star_border_black_24dp"
                android:text="4.5"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>