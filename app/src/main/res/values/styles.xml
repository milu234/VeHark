        <item name="android:textColor">#ff51565f</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- Text style for "4.5" -->
    <!-- Add this snippet to styles.xml. -->
    <style name="rating">
        <item name="android:textColor">#ff19769f</item>
